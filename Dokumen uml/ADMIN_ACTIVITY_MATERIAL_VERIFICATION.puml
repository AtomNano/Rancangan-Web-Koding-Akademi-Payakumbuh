title Admin Activity Diagram\\nVerifikasi Materi\\nE-Learning Coding Akademi Payakumbuh

|Admin|
start
:Login ke sistem;
:Akses menu "Verifikasi Materi";

|System|
:Load daftar materi pending;
:Tampilkan list materi;

|Admin|
if (Ada materi pending?) then (Ya)
  :Pilih materi untuk direview;
  :Lihat detail materi;
  note right
    Detail materi:
    • Judul materi
    • Deskripsi
    • Kelas
    • Guru yang upload
    • Tanggal upload
    • File (PDF/Video)
  end note
  
  :Preview/Download file materi;
  :Review konten materi;
  
  if (Keputusan verifikasi?) then (Approve)
    :Klik "Approve";
    :Isi catatan (opsional);
    
    |System|
    :Update status = "approved";
    :Simpan catatan admin;
    :Kirim notifikasi ke guru;
    note right
      Notifikasi:
      "Materi Anda telah disetujui
      dan dapat diakses siswa"
    end note
    :Log aktivitas;
    
    |Admin|
    :Tampilkan pesan sukses;
    :Materi dapat diakses siswa;
    
  elseif (Reject) then
    :Klik "Reject";
    :Isi alasan penolakan;
    note right
      Alasan wajib diisi
      untuk feedback ke guru
    end note
    
    |System|
    :Update status = "rejected";
    :Simpan alasan penolakan;
    :Kirim notifikasi ke guru;
    note right
      Notifikasi:
      "Materi Anda ditolak.
      Alasan: [alasan admin]"
    end note
    :Log aktivitas;
    
    |Admin|
    :Tampilkan pesan sukses;
    
  else (Remind)
    :Klik "Kirim Reminder";
    :Isi pesan reminder;
    
    |System|
    :Kirim notifikasi reminder ke guru;
    note right
      Notifikasi:
      "Reminder: Mohon cek
      materi yang pending"
    end note
    :Log aktivitas;
    
    |Admin|
    :Tampilkan pesan sukses;
  endif
  
  if (Masih ada materi pending lain?) then (Ya)
    :Kembali ke daftar materi;
    detach
  else (Tidak)
    stop
  endif
  
else (Tidak)
  :Tampilkan pesan "Tidak ada materi pending";
  stop
endif

@enduml
