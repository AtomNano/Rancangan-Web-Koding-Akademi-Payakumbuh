@startuml "E-Learning Coding Akademi - Use Case Diagram (Compact)"

' Vertical layout
top to bottom direction
scale 1.2

title E-Learning Coding Akademi Payakumbuh\nUse Case Diagram v2.0 (Compact)\nVerified - December 2025

' ============ ACTORS ============
:ADMIN\n(Pengurus): as Admin
:GURU\n(Teacher): as Guru
:SISWA\n(Student): as Siswa
actor "Google\nOAuth" as Google

' ============ SYSTEM BOUNDARY ============
rectangle "E-Learning System" #WhiteSmoke {
    
    ' === AUTHENTICATION ===
    rectangle "Autentikasi" #FFFFE0 {
        (Login) as login
        (Google OAuth\nLogin) as oauth
        (Logout) as logout
        (Update\nPassword) as passwd
    }
    
    ' === ADMIN SECTION ===
    rectangle "ADMIN Features" #FFE4E1 {
        
        rectangle "Manajemen Pengguna" {
            (CRUD Users\n+ Activate/Deactivate) as admin_user
        }
        
        rectangle "Manajemen Kelas" {
            (CRUD Kelas) as admin_class
            (Enroll/Unenroll\nSiswa) as admin_enroll
            (Export Attendance) as admin_export
        }
        
        rectangle "Manajemen Pertemuan" {
            (CRUD Pertemuan) as admin_meeting
            (Kelola Absensi) as admin_absen
        }
        
        rectangle "Verifikasi Materi" {
            (View Materi) as admin_view_mat
            (Approve/Reject\nMateri) as admin_verify
            (Remind Guru) as admin_remind
        }
        
        rectangle "Monitoring & Backup" {
            (Dashboard &\nStatistik) as admin_dash
            (Activity Logs) as admin_logs
            (Backup &\nExport Data) as admin_backup
        }
    }
    
    ' === GURU SECTION ===
    rectangle "GURU Features" #E0F2FF {
        
        rectangle "Manajemen Materi" {
            (Upload &\nKelola Materi) as guru_material
            (View Status\nVerifikasi) as guru_status
        }
        
        rectangle "Manajemen Pertemuan" {
            (CRUD Pertemuan) as guru_meeting
            (Input Absensi) as guru_absen
        }
        
        rectangle "Monitoring" {
            (View Kelas\n& Siswa) as guru_class
            (Monitor Progress\nSiswa) as guru_monitor
            (Dashboard Guru) as guru_dash
        }
    }
    
    ' === SISWA SECTION ===
    rectangle "SISWA Features" #E0FFE0 {
        
        rectangle "Akses Pembelajaran" {
            (View Kelas\nyang Diikuti) as siswa_class
            (View & Open\nMateri) as siswa_material
            (Download Materi) as siswa_download
        }
        
        rectangle "Progress & Absensi" {
            (Track Progress\n& Complete Materi) as siswa_progress
            (Update PDF\nProgress) as siswa_pdf
            (Submit Absensi) as siswa_absen
        }
        
        rectangle "Dashboard" {
            (Dashboard Siswa) as siswa_dash
        }
    }
    
    ' === SHARED FEATURES ===
    rectangle "Shared Features" #F5F5F5 {
        (Notifikasi) as notif
        (Edit Profile) as profile
    }
}

