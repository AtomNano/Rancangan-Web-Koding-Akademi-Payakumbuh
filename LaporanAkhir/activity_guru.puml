@startuml "AD - Guru"

title Activity Diagram - Guru\nSistem E-Learning Materi Online

skinparam dpi 150
scale 0.65

skinparam backgroundColor #FFFFFF
skinparam activity {
    BackgroundColor #E3F2FD
    BorderColor #2196F3
}

|#E3F2FD| Guru |
|#F5F5F5| Sistem |

start

|Guru|
:Login sebagai Guru;

|Sistem|
:Validasi kredensial;
:Tampilkan Dashboard;

|Guru|
:Pilih menu;

if (Menu?) then (Upload Materi)
    :Isi form judul & deskripsi;
    :Pilih file PDF/Video;
    :Submit;
    |Sistem|
    :Simpan file ke storage;
    :Status = pending;
    :Notifikasi ke Admin;
    
elseif (Lihat Status) then
    |Sistem|
    :Query materi by guru;
    :Tampilkan dengan status;
    
elseif (Edit Materi) then
    |Guru|
    :Edit judul/deskripsi;
    :Ganti file (opsional);
    |Sistem|
    :Update database;
    :Status = pending;
    
elseif (Hapus Materi) then
    |Guru|
    :Konfirmasi hapus;
    |Sistem|
    :Delete file & data;
    
elseif (Lihat Kelas) then
    |Sistem|
    :Query kelas diampu;
    :Tampilkan daftar siswa;
    
elseif (Monitor Progress) then
    |Sistem|
    :Hitung persentase;
    :Tampilkan progress bar;
    
else (Input Absensi)
    |Guru|
    :Pilih pertemuan;
    :Input kehadiran;
    |Sistem|
    :Simpan absensi;
    
endif

|Guru|
:Logout;

|Sistem|
:Hapus session;

stop

@enduml
