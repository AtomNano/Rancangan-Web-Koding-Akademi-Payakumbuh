##################################################
# Environment Configuration untuk cPanel Niagahoster
# Copy file ini menjadi .env di server cPanel
##################################################

APP_NAME="Coding Academy Payakumbuh"
APP_ENV=production
APP_KEY=  # Akan di-generate otomatis dengan: php artisan key:generate
APP_DEBUG=false  # PENTING: Set false untuk production!
APP_URL=https://yourdomain.com  # Ganti dengan domain Anda

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error  # production: error, debug: debug

##################################################
# DATABASE - Sesuaikan dengan Database cPanel
##################################################

DB_CONNECTION=mysql
DB_HOST=localhost  # Biasanya localhost di cPanel
DB_PORT=3306
DB_DATABASE=username_codingacademy  # Format: cpanelusername_dbname
DB_USERNAME=username_codingacademy  # Username database dari cPanel
DB_PASSWORD=your_database_password  # Password database dari cPanel

##################################################
# CACHE & SESSION - File driver untuk shared hosting
##################################################

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database  # Gunakan database untuk queue
SESSION_DRIVER=file
SESSION_LIFETIME=120

##################################################
# REDIS - Biasanya tidak tersedia di shared hosting
# Gunakan file/database driver jika redis tidak ada
##################################################

# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379

##################################################
# MAIL - Konfigurasi Email
##################################################

# Gunakan SMTP Gmail atau email hosting Anda
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-gmail-app-password  # Bukan password Gmail biasa!
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@yourdomain.com
MAIL_FROM_NAME="${APP_NAME}"

# Atau gunakan SMTP dari hosting Niagahoster
# MAIL_MAILER=smtp
# MAIL_HOST=mail.yourdomain.com
# MAIL_PORT=465
# MAIL_USERNAME=noreply@yourdomain.com
# MAIL_PASSWORD=your-email-password
# MAIL_ENCRYPTION=ssl
# MAIL_FROM_ADDRESS=noreply@yourdomain.com
# MAIL_FROM_NAME="${APP_NAME}"

##################################################
# AWS - Jika menggunakan S3 untuk file storage
##################################################

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

##################################################
# PUSHER - Real-time notifications (optional)
##################################################

PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

##################################################
# GOOGLE OAUTH - Login dengan Google (optional)
##################################################

GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI="${APP_URL}/auth/google/callback"

##################################################
# CLOUDFLARE TURNSTILE - Captcha (optional)
##################################################

TURNSTILE_SITE_KEY=your-turnstile-site-key
TURNSTILE_SECRET_KEY=your-turnstile-secret-key

##################################################
# BACKUP CONFIGURATION
##################################################

# Path mysqldump di cPanel (biasanya sudah ada)
BACKUP_MYSQLDUMP_PATH=/usr/bin/mysqldump

##################################################
# FILE UPLOAD LIMITS
##################################################

# Sesuaikan dengan php.ini setting di cPanel
UPLOAD_MAX_FILESIZE=64M
POST_MAX_SIZE=64M
MAX_EXECUTION_TIME=300

##################################################
# NOTES untuk cPanel:
##################################################

# 1. Database name, username harus sama dengan yang dibuat di cPanel
# 2. Untuk Gmail SMTP, gunakan App Password, bukan password biasa
# 3. APP_URL harus https:// jika sudah install SSL
# 4. Set APP_DEBUG=false untuk production
# 5. Jangan commit file .env ke Git!
# 6. Backup file .env secara teratur

##################################################
# CARA SETUP:
##################################################

# 1. Copy file ini ke ~/laravel_app/.env di server cPanel
# 2. Edit semua nilai yang bertanda "your-" dengan nilai sebenarnya
# 3. Generate APP_KEY: php artisan key:generate
# 4. Test koneksi database: php artisan tinker => DB::connection()->getPdo();
# 5. Cache config: php artisan config:cache
